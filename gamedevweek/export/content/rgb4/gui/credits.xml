<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- load default styles and controls -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="rgb-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<!-- +++++++++++++++++++++++++++++++++++++++ -->
	<!-- start screen -->
	<!-- +++++++++++++++++++++++++++++++++++++++ -->


	<screen id="start" controller="de.fhtrier.gdig.demos.jumpnrun.client.states.ClientCreditsState">
		<layer id="layer" childLayout="center" style="in-out-transition" backgroundColor="#000d">
			<panel id="credits" height="100%" width="100%" childLayout="vertical" style="scroller">
 				<panel height="100%"/>
			</panel>
		</layer>		
	</screen>
	

</nifty>
